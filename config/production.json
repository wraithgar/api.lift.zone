{
  "aws": {
    "ses": {
      "accessKeyId": "$AWS_ACCESS_KEY",
      "secretAccessKey": "$AWS_SECRET_ACCESS_KEY"
    }
  },
  "clientUri": "https://lift.zone",
  "db": {
    "client": "postgresql",
    "connection": "$DATABASE_URL"
  },
  "auth": {
    "secret": "$AUTH_SECRET",
    "seedPassword": "$SEED_PASSWORD"
  },
  "hapi": {
    "cache": {
      "engine": "catbox-memory"
    },
    "connections": {
      "routes": {
        "cors": {
          "additionalExposedHeaders": ["Link"],
          "origin": ["https://lift.zone"]
        }
      }
    }
  },
  "connection": {
    "public": {
      "port": "$PORT",
      "labels": "public"
    }
  },
  "good": {
    "reporters": {
      "console": [{
        "module": "good-squeeze",
        "name": "Squeeze",
        "args": [{
          "log": "*",
          "response": "*",
          "request": "*",
          "error": "*"
        }]
      }, {
        "module": "good-console"
      }, "stdout"
      ]
    }
  }
}
